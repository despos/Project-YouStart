@using Expoware.YouStart.Resources
<!DOCTYPE html>
@{
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CREDENTIALS</title>
    <link href="~/content/styles/Site/starterkit-login.css" rel="stylesheet" type="text/css" />
    <link href="~/content/styles/font-awesome.min.css" rel="stylesheet" type="text/css" /> <!-- Fixes input icon placement -->
    <link href="~/content/styles/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/content/scripts/jquery-3.1.1.min.js"></script>
    <script src="~/content/scripts/site/starterkit-core.js??v=1"></script>
</head>
    <body class="login-body">
        <div>
            <div class="login-subtitle hidden-xs">
                STARTER KIT
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3" style="margin-top: 20px;">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="login-box-header">CREDENTIALS</div>
                        </div>
                        <div class="panel-body">
                            <div class="alert alert-info noshow" id="login-message">
                            </div>
                            <form class="form-horizontal" role="form" method="post" action="@Url.Action("auth", "account")" id="login-form">
                                <div class="form-group has-feedback" id="form-group-user">
                                    <div class="col-xs-12">

                                        <input type="text" class="form-control text-lowercase" id="username" name="username"
                                               autocomplete="new-user"
                                               required
                                               maxlength="50"
                                               placeholder="@Strings_UI.Account_EnterYourName"
                                               onkeyup="__enter(event, true)">
                                        <i class="fa fa-envelope form-control-feedback"></i>
                                    </div>
                                </div>
                                <div class="form-group has-feedback" id="form-group-password">
                                    <div class="col-xs-12">
                                        <input type="password" class="form-control" id="password" name="password"
                                               autocomplete="new-password"
                                               maxlength="30"
                                               required
                                               placeholder="@Strings_UI.Account_EnterYourPassword"
                                               onkeyup="__enter(event)">
                                        <i class="fa fa-key form-control-feedback"></i>
                                    </div>
                                </div>
                                <div class="form-group" style="margin-top: 30px">
                                    <div class="col-xs-offset-2 col-xs-8">
                                        <button type="button" id="btn-login" class="btn btn-primary btn-block text-uppercase">
                                            @Strings_Menu.LogIn
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="panel-footer text-center">
                            <a href="@Url.Action("recover", "account")">Forgot your password?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <script type="text/javascript" src="~/content/scripts/site/starterkit-coreinit.js"></script>
        <script type="text/javascript" src="~/content/scripts/site/starterkit-login.js?v=1"></script>
        <script>
            function __enter(event) {
                if (event.keyCode == 13) {
                    $("#btn-login").click();
                }
            }
        </script>
    </body>
</html>
