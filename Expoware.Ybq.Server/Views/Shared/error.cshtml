@using Expoware.Ybq.Server.Resources
@model Expoware.Ybq.Server.Models.ErrorViewModel

<div class="row">
    <div class="col-xs-2 col-xs-offset-1 col-sm-2 col-sm-offset-2 text-center">
        <i class="fa fa-frown-o fa-5x"></i>
    </div>
    <div class="col-xs-8 col-xs-offset-0 col-sm-6 col-sm-offset-0 text-muted">
        <div class="">
            @if (Model.ErrorOccurred.IsAppSpecificError)
            {
                <p style="font-size: 3rem">@Model.ErrorOccurred.Message</p>
                <p style="font-size: 2rem">@Model.ErrorOccurred.AdditionalInfo</p>
            }
            else
            {
                <p style="font-size: 3rem">@Strings_Errors.Msg_GenericFailure</p>
                if (Model.Settings.ShouldShowErrorDetails)
                {
                    <div class="dropdown">
                        <button class="btn btn-warning dropdown-toggle text-uppercase"
                                type="button" data-toggle="dropdown">
                            @Strings_Menu.More
                            <i class="fa fa-chevron-down"></i>
                        </button>
                        <div class="dropdown-menu" style="padding: 20px">
                            <p style="font-size: 2rem">@Model.ErrorOccurred.Message</p>
                            <p style="font-size: 1.5rem">@Model.ErrorOccurred.AdditionalInfo</p>
                        </div>
                    </div>
                }
            }

        </div>
        
        <br/><br /><br />
        <h2>Options available</h2>
        <hr/>
        <div>
            @foreach (var link in Model.ErrorOccurred.RecoveryLinks)
            {
                <a class="btn btn-primary" href="@link">@link</a>               
            }
        </div>
    </div>
</div>

